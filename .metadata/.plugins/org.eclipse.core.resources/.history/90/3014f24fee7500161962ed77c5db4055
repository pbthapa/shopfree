package com.demo.shopfree.controller;

import java.io.IOException;

import javax.naming.NamingException;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import com.demo.shopfree.configuration.EjbConfig;
import com.retail.common.IBean;


/**
 * @author pushpathapa
 *
 */
@Controller
public class AdminController {
	
	@RequestMapping("/welcome")
	public ModelAndView helloWorld() throws NamingException, IOException {
		EjbConfig config = new EjbConfig();
		IBean helloWorld = (IBean) config.myBean();
		helloWorld.doProcess("Pushpa");
		

		String message = "<br><div style='text-align:center;'>"
				+ "<h3>********** Hello World, Spring MVC Tutorial</h3>This message is coming from Admin Control **********</div><br><br>";
		return new ModelAndView("welcome", "message", message);
	}
}
