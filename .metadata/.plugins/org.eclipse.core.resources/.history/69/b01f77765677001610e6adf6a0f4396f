package com.demo.shopfree.controller;

import java.io.IOException;

import javax.naming.NamingException;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import com.demo.shopfree.util.WebUtil;
import com.retail.services.remote.ProductService;


/**
 * @author pushpathapa
 *
 */
@Controller
public class AdminController {
	
	@RequestMapping("/welcome")
	public ModelAndView helloWorld() throws NamingException, IOException {
//		EjbConfig config = new EjbConfig();
//		ProductService helloWorld = (ProductService) config.myBean();
//		helloWorld.doProcess("Pushpa");
		
		ProductService productService = (ProductService) WebUtil.getBean("ProductService");

		String message = productService.doProcess("Pushpa !!!!!");
		return new ModelAndView("welcome", "message", message);
	}
}
